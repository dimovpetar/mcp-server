{
	"compilerOptions": {
		"outDir": "./lib",
		"moduleResolution": "node16",
		"module": "node16",
		"target": "es2022",

		"lib": ["es2022", "DOM"],
		"strict": true,
		"sourceMap": true,

		// Generate d.ts files
		"declaration": true,

		// Needed as workaround for the missing module error
		// of the optional peer dependency "@cfworker/json-schema" in
		// node_modules/@modelcontextprotocol/sdk/dist/esm/validation/types.d.ts
		"skipLibCheck": true,
	}
}
